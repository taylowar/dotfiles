Xft.dpi: 195
Xft.antialias:  1
Xft.hinting:    1
Xft.hintstyle:  hintmedium

!URxvt.termName: rxvt
urxvt.depth: 32
urxvt.transparent: false
urxvt.font: xft:IosevkaTerm Nerd Font Mono:size=20

urxvt.scrollBar: false
!URxvt.iconFile: .rexim/icons/terminal-icon.png

! special
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff

! black
*.color0:       #282828
*.color8:       #474747

! red
*.color1:       #ff9f95
*.color9:       #ff8d80

! green
! *.color2:       #e2ffc7
*.color2:       #00ff00
*.color10:      #dbffb3

! yellow
*.color3:       #ffffb9
*.color11:      #ffbe64

! blue
*.color4:       #a8ceea
*.color12:      #7eb6ff

! magenta
*.color5:       #e2b5cc
*.color13:      #e296ff

! cyan
*.color6:       #c2efff
*.color14:      #9ce9ff

! white
*.color7:       #dddddd
*.color15:      #dddddd

URxvt.perl-ext-common: resize-font,matcher,eval
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! ------------------------------------------------------------ !
! ISO bindings !

! Disable keycap picture
URxvt.iso14755: false
URxvt.iso14755_52: false

! ------------------------------------------------------------ !
! KEYBOARD !

! Disable defaults
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

! Using `eval` extension remap copy/paste
URxvt.keysym.Shift-Control-C: eval:copy_clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard

! Font resizing aka. zoom
urxvt.keysym.C-minus:  resize-font:smaller
urxvt.keysym.C-equal:  resize-font:bigger
urxvt.keysym.C-0:      resize-font:reset
